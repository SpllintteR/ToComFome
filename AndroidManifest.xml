<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gui"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.gui.CadastrarActivity" android:label="@string/title_activity_cadastrar"></activity>
        <activity android:name="com.gui.LoginActivity" android:label="@string/title_activity_login_intent"></activity>
        <activity android:name="com.gui.BuscarReceitasActivity" android:label="@string/title_activity_buscar_receitas_intent"></activity>
        <activity android:name="com.gui.CadastrarReceitaActivty" android:label="@string/title_activity_cadastrar_receita"></activity>
        <activity android:name="com.gui.CadastrarListaIngredientesActivty" android:label="@string/title_activity_cadastrar_ingrediente"></activity>
    </application>

</manifest>
