<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edtIngrediente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="21dp"
        android:layout_marginTop="23dp"
        android:ems="10" />

    <TextView
        android:id="@+id/lblNomeIngrediente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edtIngrediente"
        android:layout_alignParentLeft="true"
        android:text="Nome:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ListView
        android:id="@+id/lstIngredientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnAddIngredientes" >
    </ListView>

    <Button
        android:id="@+id/btnAddIngredientes"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtIngrediente"
        android:layout_toLeftOf="@+id/edtIngrediente"
        android:text="@string/Adicionar" />

    <Button
        android:id="@+id/btnEncerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnAddIngredientes"
        android:layout_alignBottom="@+id/btnAddIngredientes"
        android:layout_alignLeft="@+id/edtIngrediente"
        android:layout_marginLeft="49dp"
        android:text="@string/Encerrar" />

</RelativeLayout>